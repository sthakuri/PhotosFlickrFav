

    <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.poptrox.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/skel.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/util.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>
    <script>
        $(function () {
            $('form').submit(function () {
                $.ajax({
                    type: 'POST',
                    url: "@Url.Action("SendEmail", "Home")",
                    data: {
                        name: $("#name").val(),
                        email: $("#email").val(),
                        message: $("#message").val()
                    }
                });
                return false;
            });
        })
    </script>

</head>

<body>

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Header -->
        <header id="header">
            <h1><a href="www.epaila.com" target="_blank"><strong>epaila.com</strong></a></h1>
            <nav>
                <ul>
                    <li><a href="#album">Album</a></li>
                    <li><a href="#footer" class="icon fa-info-circle">Contact</a></li>
                </ul>
            </nav>
        </header>

        <!-- Main -->
        <div id="main">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer id="album" class="panel">
            <div class="inner split">
                @*<div>
                    <section>
                       <p>Album 01</p>
                    </section>
                    <section>
                        <p>Album 02</p>
                    </section>
                </div>
                <div>
                    <section>
                        <p>Album 03</p>
                    </section>
                </div>*@
                <div>
                    @for (int i = 0; i < 20; i++)
                    {
                     <section>
                        <p>Album @i.ToString()</p>
                    </section>
                    }
                </div>
            </div>
        </footer>
        <footer id="footer" class="panel">
            <div class="inner split">
                <div>
                    <section>
                        <h2>ePaila</h2>
                        <p>Loading...</p>
                    </section>
                    <section>
                        <h2>Follow me on ...</h2>
                        <ul class="icons">
                            <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                            <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                            <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                            <li><a href="https://github.com/ePaila" class="icon fa-github"><span class="label">GitHub</span></a></li>
                            <li><a href="#" class="icon fa-dribbble"><span class="label">Dribbble</span></a></li>
                            <li><a href="#" class="icon fa-linkedin"><span class="label">LinkedIn</span></a></li>
                        </ul>
                    </section>
                    <p class="copyright">
                        &copy; Design: <a href="http://html5up.net">HTML5 UP</a>.
                    </p>
                </div>
                <div>
                    <section>
                        <h2>Get in touch</h2>
                        <form id="pingme" method="post" action="">
                            <div class="field half first">
                                <input type="text" name="name" id="name" placeholder="Name" />
                            </div>
                            <div class="field half">
                                <input type="text" name="email" id="email" placeholder="Email" />
                            </div>
                            <div class="field">
                                <textarea name="message" id="message" rows="4" placeholder="Message"></textarea>
                            </div>
                            <ul class="actions">
                                <li>
                                    <input type="submit" value="Send" class="special" /></li>
                                <li>
                                    <input type="reset" value="Reset" /></li>
                            </ul>
                        </form>
                    </section>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
